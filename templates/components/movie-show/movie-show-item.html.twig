{% set url = path('app_movie', { id: movie.id }) %}

<div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
  <a href="{{ url }}">
    <img class="rounded-t-lg" src="/uploads/{{ movie.poster }}" alt="" />
  </a>
  <div class="p-5">
    <a href="{{ url }}"><h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ movie.title }}</h5></a>
    <div class="font-normal text-gray-700 dark:text-gray-400">
      <p>{{ movie.description }}</p>
    </div>
  </div>
</div>
